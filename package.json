{
  "name": "beststoree",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "dev:test": "AUTH_URL=http://localhost:3000 NEXTAUTH_URL=http://localhost:3000 NEXT_PUBLIC_SERVER_URL=http://localhost:3000 AUTH_TRUST_HOST=true next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "db:up": "docker compose up -d",
    "db:down": "docker compose down",
    "db:logs": "docker compose logs -f postgres",
    "db:migrate": "dotenv -e .env.local -- prisma migrate deploy",
    "db:migrate:dev": "dotenv -e .env.local -- prisma migrate dev",
    "db:migrate:reset": "dotenv -e .env.local -- prisma migrate reset",
    "db:generate": "dotenv -e .env.local -- prisma generate",
    "db:seed": "dotenv -e .env.local -- npx tsx db/seed.ts",
    "db:studio": "dotenv -e .env.local -- prisma studio",
    "db:setup": "npm run db:up && sleep 3 && npm run db:migrate && npm run db:generate",
    "open-ssh-tunnel": "node scripts/openTunnel.js",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "cypress:open": "cypress open",
    "cypress:run": "cypress run",
    "cypress:opendev": "dotenv -e .env.local -- cypress open",
    "cypress:rundev": "dotenv -e .env.local -- cypress run",
    "app-start": "concurrently \"npm run open-ssh-tunnel\" \"start-server-and-test dev http://localhost:3000 cypress:open\" \"npx prisma studio\"",
    "app-start:ci": "concurrently \"npm run open-ssh-tunnel\" \"start-server-and-test dev http://localhost:3000 cypress:run\"",
    "postinstall": "prisma generate",
    "email": "cp .env ./node_modules/react-email && email dev --dir email --port 3001"
  },
  "dependencies": {
    "@auth/prisma-adapter": "^2.8.0",
    "@hookform/resolvers": "^5.0.1",
    "@paypal/react-paypal-js": "^8.9.2",
    "@radix-ui/react-alert-dialog": "^1.1.15",
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.6",
    "@radix-ui/react-label": "^2.1.6",
    "@radix-ui/react-radio-group": "^1.3.7",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-toast": "^1.2.6",
    "@react-email/components": "^1.0.1",
    "@stripe/react-stripe-js": "^5.4.0",
    "@stripe/stripe-js": "^8.5.2",
    "@uploadthing/react": "^7.3.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "concurrently": "^9.1.2",
    "dotenv": "^16.4.7",
    "embla-carousel-autoplay": "^8.6.0",
    "embla-carousel-react": "^8.6.0",
    "lucide-react": "^0.475.0",
    "next": "15.1.9",
    "next-auth": "^5.0.0-beta.25",
    "next-themes": "^0.4.4",
    "query-string": "^9.3.1",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-email": "^5.0.5",
    "react-hook-form": "^7.56.4",
    "recharts": "^3.4.1",
    "resend": "^6.5.2",
    "slugify": "^1.6.6",
    "stripe": "^20.0.0",
    "tailwind-merge": "^3.0.1",
    "tailwindcss-animate": "^1.0.7",
    "uploadthing": "^7.7.4",
    "vaul": "^1.1.2",
    "zod": "^3.25.1",
    "zustand": "^5.0.9"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@prisma/client": "^6.3.1",
    "@react-email/preview-server": "^5.0.5",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.2.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^22.13.2",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitest/coverage-v8": "^3.0.5",
    "cypress": "^14.0.3",
    "dotenv-cli": "^11.0.0",
    "eslint": "^9",
    "eslint-config-next": "15.1.7",
    "jsdom": "^26.0.0",
    "postcss": "^8",
    "prisma": "^6.3.1",
    "start-server-and-test": "^2.0.10",
    "tailwindcss": "^3.4.1",
    "typescript": "^5",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.0.5",
    "vitest-mock-extended": "^3.0.1"
  }
